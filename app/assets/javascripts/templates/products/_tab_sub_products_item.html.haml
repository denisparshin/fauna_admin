.row.border-b.border-light(ng-class="{'bg-body': $index % 2 != 0}")
  .gtr-hor.gtr-t
    %form(name="subProductForm")
      .row
        .col-xs-6
          %label.form-label.required
            .form-label-text {{::"js.sub_products.attributes.name" | translate}}
            %input.form-control(ng-model="sub.name" required)
        .col-xs-3
          %label.form-label.required
            .form-label-text {{::"js.sub_products.attributes.price" | translate}}
            %input.form-control(ng-model="sub.price" required)
        .col-xs-3
          %label.form-label.required
            .form-label-text {{::"js.sub_products.attributes.count" | translate}}
            %input.form-control(ng-model="sub.count" required )
      .clearfix
        .tbl
          .tbl-cell.align-bottom
            .smile.gtr-r
              %label.form-checkbox
                %input(ng-model="sub.visible" type="checkbox")
                %span {{::"js.sub_products.attributes.visible" | translate}}
            .smile.gtr-r
              %label.form-checkbox
                %input(ng-model="sub.avail" type="checkbox")
                %span {{::"js.sub_products.attributes.avail" | translate}}
          .tbl-cell.align-bottom.text-right
            .gtr-b-sm(ng-show="subProductForm.$dirty")
              %button.btn.btn-primary(type="submit" ng-disabled="!subProductForm.$valid") {{::"js.helpers.submit" | translate}}
