.clearfix
  .clearfix
    %ul.nav.nav-tabs
      %li(ng-repeat="tab in tabs track by $index" ng-class="{'active': activeTab==tab}")
        %a(ng-href='/#/products/{{::productId}}/{{::tab}}') {{::"js.products.tabs." + tab | translate}} 
  .clearfix(ng-switch="activeTab")
    %div(ng-switch-when="info" product-tab-info product-id="productId")
    %div(ng-switch-when="comments" product-tab-comments product-id="productId")
    %div(ng-switch-when="slider" product-tab-slider product-id="productId")
    %div(ng-switch-when="sub_products" product-tab-sub-products product-id="productId")

