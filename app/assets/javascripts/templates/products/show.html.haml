.clearfix
  %ul.nav.nav-tabs
    %li(ng-class="{'active': activeTab=='info'}")
      %a(ng-href="/#/products/{{::product.id}}/info") {{::"js.products.tabs.info" | translate}}
    %li(ng-class="{'active': activeTab=='slider'}")
      %a(ng-href="/#/products/{{::product.id}}/slider") {{::"js.products.tabs.slider" | translate}}
    %li(ng-class="{'active': activeTab=='comments'}")
      %a(ng-href="/#/products/{{::product.id}}/comments") {{::"js.products.tabs.comments" | translate}}
.tab-content.bg-white.gtr-hor.gtr-ver(ng-if="activeTab=='info'")
  %form(name="productForm" ng-submit="updateProduct(product)")
    %label.form-label.required
      .form-label-text {{::"js.products.attributes.name" | translate}}
      %input.form-control(ng-model="product.name" required)
    %label.form-label.required
      .form-label-text {{::"js.products.attributes.title" | translate}}
      %input.form-control(ng-model="product.title" required)
    %label.form-label
      .form-label-text {{::"js.products.attributes.metatag_attributes.keywords" | translate}}
      %input.form-control(ng-model="product.metatag_attributes.keywords")
    %label.form-label
      .form-label-text {{::"js.products.attributes.metatag_attributes.description" | translate}}
      %input.form-control(ng-model="product.metatag_attributes.description")
    %label.form-label
      .row-b-sm
        .form-label-text {{::"js.products.attributes.description" | translate}}
    %summernote(ng-model="product.description")
    %button.btn.btn-primary(type="submit" ng-disabled="!productForm.$valid") {{::"js.helpers.submit" | translate}}
